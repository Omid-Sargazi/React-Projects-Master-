generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider     = "mysql"
  relationMode = "prisma"
}

model Product {
  id          Int       @id @default(autoincrement())
  name        String
  description String
  price       Decimal
  image       String
  category    Category @relation(fields: [categoryId], references: [id])
  categoryId  Int

  @@index([categoryId])
}

model Category {
  id          Int       @id @default(autoincrement())
  name        String
  description String
  products    Product[]
}
